@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome!</h1>
    <p class="lead">Welcome to the MVC International Bank.</p>
    <h3>@ViewBag.PageHeader</h3>
</div>

<div class="row">
    <div class="col-md-6 margin-top-20">
        <a href="#" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-circle-arrow-down"></span> Withdrawal</a>
        <a href="#" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-flash"></span> Quick Cash $100</a>
        <a href="@Url.Action("Index", "CheckAccount")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-question-sign"></span> Check Account &raquo;</a>
    </div>
    <div class="col-md-6 margin-top-20">
        <a href="#" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-print"></span> Print Statement</a>
        <a href="#" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-transfer"></span> Transfer Funds</a>
        <a href="@Url.Action("Deposit", "Transaction", new { checkAccountId = ViewBag.checkAccountId})" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-circle-arrow-up"></span> Deposit</a>
    </div>
    @if (Request.RequestContext.HttpContext.User)
    <div class="col-md-12 margin-top-20">
        <a href="@Url.Action("List", "CheckAccount")" class="btn btn-success btn-large btn-block"><span class="glyphicon glyphicon-list"></span> List Accounts &raquo;</a>
    </div>
</div>


<h3>Your Information</h3>
<h5>You are currently using @Request.Browser.Browser</h5>
<h5>You are on IP Adress: @Request.UserHostAddress</h5>
<h5>Your serial number: @Html.Action("Serial", "Home", new { letterCase = "upper" })</h5>