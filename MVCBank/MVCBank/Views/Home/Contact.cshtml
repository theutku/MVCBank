@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

<address>
    <strong>Support: </strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
</address>

<textarea name="clientMessage"></textarea>
<br />
<button name="sendbtn" type="button">Send</button>
<div id="result"></div>
<h5>@ViewBag.YourMessage</h5>

@section scripts {
    <script>

        $('button[name=sendbtn]').on('click', function () {
            var val = $('[name=clientMessage]').val();

            $.ajax({
                url: '/home/contact',
                type: 'POST',
                data: JSON.stringify({ clientMessage: val }),
                contentType: 'application/json',
                success: function (response) {
                    $('#result').html(response);
                }
            });
        });

    </script>
}